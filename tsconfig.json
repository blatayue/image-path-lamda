{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "downlevelIteration": true,
    "lib": ["esnext"],
    "target": "es2015",
    "allowJs": true,
    "noEmit": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
